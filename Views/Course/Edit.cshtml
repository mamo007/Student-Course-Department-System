@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit - Course</h1>
<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CrsId" />
            <div class="form-group">
                <label asp-for="CrsName" class="control-label">Name</label>
                <input asp-for="CrsName" class="form-control" />
                <span asp-validation-for="CrsName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

